@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="profile.css"/>
</head>
<body>
    <div class="container">
        <!-- Profile Header -->
        <section class="profile-header">
            <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="Profile" class="profile-pic">
            <div class="profile-info">
                <h1>Alex Johnson</h1>
                <p>Frontend Developer | Learning React & Node.js</p>
                <div class="social-links">
                    <a href="#">GitHub</a>
                    <a href="#">LinkedIn</a>
                    <a href="#">Portfolio</a>
                </div>
            </div>
            <button class="edit-btn">Edit Profile</button>
        </section>

        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <h3>12</h3>
                <p>Enrolled courses</p>
            </div>
            <div class="stat-card">
                <h3>5</h3>
                <p>Completed</p>
            </div>
            <div class="stat-card">
                <h3>7</h3>
                <p>Day Streak</p>
            </div>
            <div class="stat-card">
                <h3>42</h3>
                <p>Hours Learned</p>
            </div>
        </div>

        <!-- Skills Progress -->
        <section class="progress-section">
            <h2 class="section-title">Skill Progress</h2>
            <div class="progress-item">
                <div class="progress-label">
                    <span>HTML/CSS</span>
                    <span>85%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 85%;"></div>
                </div>
            </div>
            <div class="progress-item">
                <div class="progress-label">
                    <span>JavaScript</span>
                    <span>70%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 70%;"></div>
                </div>
            </div>
            <div class="progress-item">
                <div class="progress-label">
                    <span>React</span>
                    <span>55%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 55%;"></div>
                </div>
            </div>
        </section>

        <!-- Current profile-courses -->
        <section class="progress-section">
            <h2 class="section-title">Current courses</h2>
            <div class="profile-courses-grid">
                <div class="profile-course-card">
                    <img src="https://via.placeholder.com/400x200" alt="" class="profile-course-thumbnail">
                    <div class="profile-course-content">
                        <h3>Advanced React Patterns</h3>
                        <div class="profile-course-meta">
                            <span>Due in 2 weeks</span>
                            <span>65%</span>
                        </div>
                        <div class="profile-course-progress">
                            <div class="profile-course-progress-fill" style="width: 65%;"></div>
                        </div>
                        <button class="resume-btn">Resume</button>
                    </div>
                </div>
                <div class="profile-course-card">
                    <img src="https://via.placeholder.com/400x200" alt="" class="profile-course-thumbnail">
                    <div class="profile-course-content">
                        <h3>Node.js Fundamentals</h3>
                        <div class="profile-course-meta">
                            <span>Due in 3 weeks</span>
                            <span>30%</span>
                        </div>
                        <div class="profile-course-progress">
                            <div class="profile-course-progress-fill" style="width: 30%;"></div>
                        </div>
                        <button class="resume-btn">Resume</button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Achievements -->
        <section class="achievements-section">
            <h2 class="section-title">Achievements</h2>
            <div class="badges-grid">
                <div class="badge">🏆</div>
                <div class="badge">⭐</div>
                <div class="badge">🚀</div>
                <div class="badge">🎯</div>
                <div class="badge">🔑</div>
                <div class="badge">💻</div>
            </div>
        </section>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
