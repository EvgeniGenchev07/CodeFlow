@page "/profile_edit"
<main class="edit-profile-section">
    <div class="container">
        <div class="edit-profile-container">
            <h2 class="section-title-edit">Редактиране на профил</h2>
            <form id="editProfileForm">
                <div class="form-group">
                    <div class="profile-picture-upload">
                        <img src="https://via.placeholder.com/80" alt="Profile Picture Preview" class="profile-picture-preview">
                        <div class="file-upload-container">
                            <button type="button" class="file-upload-btn">
                                <i class="fas fa-upload"></i> Качи снимка
                            </button>
                            <input type="file" id="profilePicture" name="profilePicture" class="file-upload-input" accept="image/*">
                        </div>
                    </div>
                    <div class="error-message" id="profilePictureError">Моля, изберете валиден изображение (PNG, JPG).</div>
                </div>
                <div class="form-group">
                    <label for="username">Потребителско име</label>
                    <input type="text" id="username" name="username" value="CodeMaster" required>
                    <div class="error-message" id="usernameError">Потребителското име трябва да е между 3 и 20 символа.</div>
                </div>

                <button type="submit" class="btn btn-primary" style="margin-bottom: 1rem;">
                    <i class="fas fa-save"></i> Запази промените
                </button>
                <button type="button" id="deleteAccountBtn" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Изтрий профила
                </button>
            </form>
        </div>
    </div>
</main>

<!-- Delete Account Modal -->
<div class="modal" id="deleteAccountModal">
    <div class="modal-content">
        <button class="modal-close" id="modalClose"><i class="fas fa-times"></i></button>
        <h3 class="modal-title">Потвърждение за изтриване на профила</h3>
        <p class="modal-description">Сигурни ли сте, че искате да изтриете профила си? Това действие е необратимо и ще премахне всички ваши данни, включително точки, курсове и напредък.</p>
        <div class="modal-actions">
            <button class="btn btn-outline" id="cancelDelete">Отказ</button>
            <button class="btn btn-danger" id="confirmDelete">Изтрий</button>
        </div>
    </div>
</div>
