@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}
<section class="section" id="login">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h2><span class="text-gradient">Вход</span> в CodeBattle</h2>
                <p>Влез в своя акаунт, за да продължиш обучението</p>
            </div>

            <form class="login-form">
                <div class="form-group">
                    <label for="email">Имейл адрес</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="email" placeholder="Въведи своя имейл" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Парола</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" placeholder="Въведи паролата си" required>
                        <button type="button" class="show-password" id="show-password">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" id="remember">
                        <span>Запомни ме</span>
                    </label>
                    <a href="#forgot-password" class="forgot-password">Забравена парола?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-sign-in-alt"></i> Вход
                </button>

                <div class="login-divider">
                    <span>или</span>
                </div>

                <div class="social-login">
                    <button type="button" class="btn btn-outline btn-social">
                        <i class="fab fa-google"></i> Вход с Google
                    </button>
                    <button type="button" class="btn btn-outline btn-social">
                        <i class="fab fa-github"></i> Вход с GitHub
                    </button>
                </div>

                <div class="login-footer">
                    Нямаш акаунт? <a href="#register" class="register-link">Регистрирай се</a>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
