@using BusinessLayer
@model List<BusinessLayer.Forum>
@section Styles {
<link rel="stylesheet" href="~/css/forum.css" asp-append-version="true" />
}
<!-- Forum Header -->
<div class="forum-header">
    <div>
        <h1 class="forum-title">Форум</h1>
        <p class="forum-subtitle">Задавай въпроси, споделяй знания и обсъждай с други програмисти в нашата общност.</p>
    </div>

    <div class="forum-actions">
        <div class="forum-search">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Търсене във форума...">
        </div>
        <button class="btn btn-primary"><i class="fas fa-filter"></i> Филтри</button>
    </div>
</div>

<!-- Categories -->
<div class="forum-categories">
    <button onclick="window.location.href = '?filter=@ForumFilters.All'" class="category-btn active">Всички</button>
    <button onclick="window.location.href = '?filter=@ForumFilters.Js'" class="category-btn">JavaScript</button>
    <button onclick="window.location.href = '?filter=@ForumFilters.Algorithms'" class="category-btn">Алгоритми</button>
    <button onclick="window.location.href = '?filter=@ForumFilters.DOMAssembly'" class="category-btn">DOM</button>
    <button onclick="window.location.href = '?filter=@ForumFilters.Asynchronous'" class="category-btn">Асинхронен код</button>
    <button onclick="window.location.href = '?filter=@ForumFilters.Interviews'" class="category-btn">Интервюта</button>
    <button onclick="window.location.href = '?filter=@ForumFilters.Projects'" class="category-btn">Проекти</button>
</div>

<!-- Forum Posts -->
<div class="forum-posts">
    @foreach (var post in Model)
    {
        <div class="forum-card">
            <div class="user-avatar"><img src="@post.Author.ProfilePicture"></div>
            <div class="post-content">
                <div class="post-header">
                    <span class="post-user">@post.Author.FullName</span>
                    <span class="post-time">преди 2 часа</span>
                </div>
                <h3 class="post-title">Как да оптимизирам този алгоритъм за сортиране?</h3>
                <p class="post-text">Имам проблем с оптимизирането на моя алгоритъм за сортиране. Някой може ли да ми помогне да го направя по-бърз? Текущото ми решение използва bubble sort, но е твърде бавно за големи масиви...</p>
                <div class="post-tags">
                    <span class="post-tag">Алгоритми</span>
                    <span class="post-tag">Оптимизация</span>
                    <span class="post-tag">JavaScript</span>
                </div>
                <div class="post-stats">
                    <div class="post-stat">
                        <i class="fas fa-comment"></i> 7 отговора
                    </div>
                    <div class="post-stat">
                        <i class="fas fa-eye"></i> @post.Views прегледа
                    </div>
                </div>
            </div>
        </div>

    }
</div>
<!-- Pagination -->
<div class="pagination">
    <a class="page-btn"><i class="fas fa-chevron-left"></i></a>
    <a class="page-btn active">1</a>
    <a class="page-btn">2</a>
    <a class="page-btn">3</a>
    <a class="page-btn">4</a>
    <a class="page-btn">5</a>
    <a class="page-btn"><i class="fas fa-chevron-right"></i></a>
</div>

<!-- New Post Button -->
<button class="new-post-btn" id="newPostBtn">
    <i class="fas fa-plus"></i>
</button>
